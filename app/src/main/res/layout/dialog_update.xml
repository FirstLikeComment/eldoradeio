<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <ImageView
            android:src="@mipmap/logodorade"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:scaleType="center"
            android:background="#FFFFBB33"
            android:contentDescription="@string/app_name"/>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/firstnameLayoutUpdate">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/firstname_update" android:id="@+id/firstnameUpdate" android:singleLine="true"
                android:selectAllOnFocus="true"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/lastnameLayoutUpdate">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/lastname_update" android:id="@+id/lastnameUpdate" android:singleLine="true"
                android:selectAllOnFocus="true"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:id="@+id/dobFieldLayoutUpdate"
            app:layout_constraintTop_toBottomOf="@+id/lastnameLayoutUpdate"
            app:layout_constraintStart_toStartOf="@+id/lastnameLayoutUpdate" android:layout_marginLeft="128dp"
            android:layout_marginStart="128dp" app:layout_constraintEnd_toEndOf="@+id/lastnameLayoutUpdate"
            android:layout_marginEnd="128dp" android:layout_marginRight="128dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dob_register" android:id="@+id/dobFieldUpdate" android:singleLine="true"
                android:selectAllOnFocus="true"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
            android:id="@+id/yearFieldUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:hint="@string/year_text_register"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/year_spinner_update" app:layout_constraintStart_toEndOf="@+id/yearFieldUpdate"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="156dp" android:layout_marginRight="156dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/dobFieldLayoutUpdate" android:spinnerMode="dropdown"
    />



</LinearLayout>
