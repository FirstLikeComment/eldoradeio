<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Rooms.RoomsActivity">
    <TextView
            android:text="@string/room_filter_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roomFilterTypeText"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roomFilterTypeSpinner"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toTopOf="@+id/roomFilterTypeText"
            app:layout_constraintBottom_toBottomOf="@+id/roomFilterTypeText"
            app:layout_constraintStart_toEndOf="@+id/roomFilterTypeText" android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp" app:layout_constraintVertical_bias="0.0"
    />
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roomFilterChoiceSpinner"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toTopOf="@+id/roomFilterChoiceText"
            app:layout_constraintBottom_toBottomOf="@+id/roomFilterChoiceText"
            app:layout_constraintStart_toEndOf="@+id/roomFilterChoiceText"
            android:layout_marginLeft="104dp" android:layout_marginStart="104dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="@+id/roomFilterTypeSpinner"
            app:layout_constraintEnd_toEndOf="@+id/roomFilterTypeSpinner" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="@string/room_filter_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roomFilterChoiceText" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/roomFilterTypeText"
            app:layout_constraintStart_toStartOf="@+id/roomFilterTypeText"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"/>
    <TextView
            android:text="@string/room_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roomListText" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/roomFilterChoiceText"
            app:layout_constraintStart_toStartOf="@+id/roomFilterChoiceText"
    />
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/roomListText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/roomListRecyclerView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>